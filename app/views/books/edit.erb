    <label for="self-development">Self Development</label><br>
    <input type="checkbox" id="memoir" value="Memoir">
    <label for="memoir">Memoir</label><br>
    <input type="checkbox" id="novel" value="Novel">
    <label for="novel">Novel</label><br>
    <input type="checkbox" id="fiction" value-="Fiction">
    <label for="fiction">Fiction</label><br>
    <input type="checkbox" id="non-fiction" value="Non Fiction">
    <label for="non-fiction">Non Fiction</label><br>
    <input type="checkbox" id="mystery" value="Mystert">
    <label for="mystery">Mystery</label><br>
    <input type="checkbox" id="romance" value="Romance">
    <label for="romance">Romance</label><br>

    <input type="submit" id="submit" value="Submit Edits">
</form>